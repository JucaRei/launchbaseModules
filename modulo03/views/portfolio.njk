{% extends "layout.njk" %}
{% block head %}
  <title>Portfolio - Teste</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  {% endblock %}
  {% block content %}
    <div id="wrapper">
      <h1>Aulas</h1>
    </div>
    <section class="cards">
      {% for item in items %}
        {# nunjuks usa {{}} #}
        <div class="card" id="{{ item.id }}">
          <div
            class="card__image-container {{ 'featured-wrapper' if item.featured }} ">
            {#  duas classes s√≥ quando tiver o featured  #}
            <img src="https://img.youtube.com/vi/{{ item.id }}/maxresdefault.jpg" alt="Imagem de {{ item.title }}">
              {% if item.featured %}
                <div class="featured">Featured</div>
              {% endif %}
            </div>
            <div class="card__content">
              <p>{{ item.title }}</p>
            </div>
            <div class="card__info">
              <p>{{ item.duration }}</p>
              <p class="card__price">{{ item.price }}</p>
            </div>
          </div>
        {% endfor %}
      </section>
      <!-- modal -->
      <div class="modal-overlay">
        <div class="modal">
          <a
            class="close-modal">
            <!-- classe material icons (Google) -->
            <i class="material-icons">close</i>
          </a>
          <!-- conter o video (iframe) -->
          <div
            class="modal-content">
            <!-- video aqui -->
            <iframe src="" frameborder="0"></iframe>
          </div>
        </a>
      </div>
    </div>
    <script src="scripts.js"></script>
  {% endblock %}